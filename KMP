import java.util.ArrayList;
import java.util.List;

public class KMP {

    public List<Integer> search(String text, String pattern) {
        List<Integer> occurrences = new ArrayList<>();
        if (pattern == null || pattern.length() == 0) {
            return occurrences;
        }

        int n = text.length();
        int m = pattern.length();

        int[] lps = computeLPSArray(pattern);

        int i = 0;
        int j = 0;

        while (i < n) {
            if (text.charAt(i) == pattern.charAt(j)) {
                i++;
                j++;
            }

            if (j == m) {
                occurrences.add(i - j);
                j = lps[j - 1];
            }
            else if (i < n && text.charAt(i) != pattern.charAt(j)) {
                if (j != 0) {
                    j = lps[j - 1];
                } else {
                    i++;
                }
            }
        }
        return occurrences;
    }

    private int[] computeLPSArray(String pattern) {
        int m = pattern.length();
        int[] lps = new int[m];

        int length = 0;
        lps[0] = 0;
        int i = 1;

        while (i < m) {
            if (pattern.charAt(i) == pattern.charAt(length)) {
                length++;
                lps[i] = length;
                i++;
            } else {
                if (length != 0) {
                    length = lps[length - 1];
                } else {
                    lps[i] = 0;
                    i++;
                }
            }
        }
        return lps;
    }

    public static void main(String[] args) {
        KMP kmp = new KMP();

        System.out.println("KMP Алгоритм Тестирование ");

        String text1 = "ABABABCABAB";
        String pattern1 = "ABAB";
        System.out.println("\nТест 1: Короткая строка");
        System.out.println("Текст:   " + text1);
        System.out.println("Образец: " + pattern1);
        System.out.println("Найденные вхождения (индексы): " + kmp.search(text1, pattern1));

        String text2 = "AAAAABAAABA";
        String pattern2 = "AAAA";
        System.out.println("\nТест 2: Строка средней длины");
        System.out.println("Текст:   " + text2);
        System.out.println("Образец: " + pattern2);
        System.out.println("Найденные вхождения (индексы): " + kmp.search(text2, pattern2));

        String text3 = "THEQUICKBROWNFOXJUMPSOVERTHELAZYDOGANDTHEFOXWASHAPPY";
        String pattern3 = "FOX";
        System.out.println("\nТест 3: Длинная строка");
        System.out.println("Текст:   " + text3);
        System.out.println("Образец: " + pattern3);
        System.out.println("Найденные вхождения (индексы): " + kmp.search(text3, pattern3));

        String text4 = "AAAAAAAAAAAAAAAAAB";
        String pattern4 = "AAAAA";
        System.out.println("\nТест 4: Патологический случай");
        System.out.println("Текст:   " + text4);
        System.out.println("Образец: " + pattern4);
        System.out.println("Найденные вхождения (индексы): " + kmp.search(text4, pattern4));
    }
}
